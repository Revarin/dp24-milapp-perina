<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Kris.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:Kris.Client.Views"
    xmlns:vm="clr-namespace:Kris.Client.ViewModels.Views"
    xmlns:local="clr-namespace:Kris.Client"
    x:DataType="vm:AppShellViewModel"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Title="Login" Route="LoginView" ContentTemplate="{DataTemplate v:LoginView}" />
    <ShellContent Title="Map" Route="MapView" ContentTemplate="{DataTemplate v:MapView}" />
    <ShellContent Title="Menu" Route="MenuView" ContentTemplate="{DataTemplate v:MenuView}" />
</Shell>
