<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:Kris.Client.ViewModels"
             x:Class="Kris.Client.Views.LoginView"
             x:DataType="vm:LoginViewModel"
             Title="LoginView">
    <StackLayout Orientation="Vertical">
        <StackLayout Orientation="Vertical">
            <Label Text="Login" />
            <Entry>
            </Entry>
        </StackLayout>
        <StackLayout Orientation="Vertical">
            <Label Text="Password" />
            <Entry IsPassword="True">
            </Entry>
        </StackLayout>
        <Button Text="Login">
            <Button.Behaviors>
                <tk:EventToCommandBehavior EventName="Clicked" Command="{Binding LoginClickedCommand}" />
            </Button.Behaviors>
        </Button>
        <Button Text="Register">
            <Button.Behaviors>
                <tk:EventToCommandBehavior EventName="Clicked" Command="{Binding RegisterClickedCommand}" />
            </Button.Behaviors>
        </Button>
    </StackLayout>
</ContentPage>