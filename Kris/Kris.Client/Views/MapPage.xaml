<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:viewModels="clr-namespace:Kris.Client.ViewModels"
             xmlns:behaviors="clr-namespace:Kris.Client.Behaviors"
             x:Class="Kris.Client.MapPage"
             Title="Map page">
    <ContentPage.BindingContext>
        <viewModels:MapViewModel />
    </ContentPage.BindingContext>
    <StackLayout BackgroundColor="Red">
        <maps:Map MapType="Street" IsZoomEnabled="True"
                  VerticalOptions="FillAndExpand">
            <maps:Map.Behaviors>
                <behaviors:MapRegionBehavior CurrentRegion="{Binding CurrentRegion}"
                                             MoveToRegion="{Binding MoveToRegion}"/>
                <toolkit:EventToCommandBehavior EventName="Loaded" Command="{Binding LoadedCommand}" />
            </maps:Map.Behaviors>
        </maps:Map>
        <Button Text="Test">
            <Button.Behaviors>
                <toolkit:EventToCommandBehavior EventName="Clicked" Command="{Binding TestCommand}" />
            </Button.Behaviors>
        </Button>
    </StackLayout>
</ContentPage>
