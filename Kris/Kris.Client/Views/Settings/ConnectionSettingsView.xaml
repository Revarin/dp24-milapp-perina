<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:Kris.Client.ViewModels"
             xmlns:behaviors="clr-namespace:Kris.Client.Behaviors"
             x:Class="Kris.Client.ConnectionSettingsView"
             x:DataType="viewModels:ConnectionSettingsViewModel"
             Title="Connection settings">
    <StackLayout>
        <HorizontalStackLayout>
            <Label Text="GPS request interval">
            </Label>
            <Picker x:Name="GpsInterval"
                    Title="GPS request interval"
                    ItemsSource="{Binding GpsIntervalItems}"
                    ItemDisplayBinding="{Binding Display}"
                    SelectedItem="{Binding GpsIntervalSelectedItem}">
                <Picker.Behaviors>
                    <toolkit:EventToCommandBehavior EventName="SelectedIndexChanged" Command="{Binding SelectedIndexChangedCommand}" />
                </Picker.Behaviors>
            </Picker>
        </HorizontalStackLayout>
        
    </StackLayout>
</ContentPage>